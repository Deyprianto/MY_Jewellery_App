<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Design"
    android:background="@drawable/two_color">

    <TextView
        android:id="@+id/chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BD Jewellero App"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/left_shade"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- Fix ScrollView height -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Inner LinearLayout to hold all items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_design"
                    android:drawableTop="@drawable/chian2"
                    android:text="Gold chains"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_design"
                    android:text="Necklase"
                    android:drawableTop="@drawable/neckless"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_design"
                    android:drawableTop="@drawable/bangles"
                    android:text="Bangles"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Earings"
                    android:background="@drawable/frame_design"
                    android:drawableTop="@drawable/earing"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_design"
                    android:drawableTop="@drawable/finger_ring"
                    android:text="Finger Rings"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_design"
                    android:text="pendant"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:drawableTop="@drawable/pendant"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
